<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMCApp.MainPage">

    <StackLayout>
        <Label Text="Calculate IMC"/>
        <Entry Placeholder="Height" x:Name="Height"/>
        <Entry Placeholder="Weight" x:Name="Weight"/>
        <Entry Placeholder="IMC" x:Name="IMC"/>
        <Button Text="Calculate" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
